homeassistant:
  # Name of the location where Home Assistant is running
  name: Home
  # Location required to calculate the time the sun rises and sets
  latitude: 59.35
  longitude: 17.9167
  # Impacts weather/sunrise data (altitude above sea level in meters)
  elevation: 19
  # metric for Metric, imperial for Imperial
  unit_system: metric
  # Pick yours from here: http://en.wikipedia.org/wiki/List_of_tz_database_time_zones
  time_zone: Europe/Stockholm

  customize: !include customizations.yaml

# Enables the frontend
frontend:

# Enables configuration UI
config:

http:
  # Uncomment this to add a password (recommended!)
  api_password: {{ hass_password }}
  # Uncomment this if you are using SSL or running in Docker etc
  # base_url: example.duckdns.org:8123
  ssl_certificate: {{ home_assistant_cfg_dir }}/fullchain.pem
  ssl_key: {{ home_assistant_cfg_dir }}/privkey.pem

# Checks for available updates
# Note: This component will send some information about your system to
# the developers to assist with development of Home Assistant.
# For more information, please see:
# https://home-assistant.io/blog/2016/10/25/explaining-the-updater/
updater:
  # Optional, allows Home Assistant developers to focus on popular components.
  # include_used_components: true

# Discover some devices automatically
discovery:

# Allows you to issue voice commands from the frontend in enabled browsers
conversation:

# Enables support for tracking state changes over time.
history:

# View all events in a logbook
logbook:

# Track the sun
sun:

# Text to speech
tts:
  platform: google

# Enable wake on lan
wake_on_lan:

# Netatmo
netatmo:
  api_key: 59a6b173ea00a0771c8bbc5b
  secret_key: {{ netatmo_api_secret }}
  username: paer.berge@gmail.com
  password: {{ netatmo_password }}
  discovery: False

# verisure
verisure:
  username: per@peers.se
  password: {{ verisure_password }}
  alarm: 0
  hygrometers: 0
  smartplugs: 0
  thermometers: 0
  mouse: 0
  door_window: 0
  code_digits: 6

logger:
  default: warning
  logs:
    homeassistant.components.rfxtrx: debug

rfxtrx:
  device: /dev/serial/by-id/usb-RFXCOM_RFXtrx433_A11I6JAE-if00-port0

group: !include_dir_merge_named group/
automation: !include automations.yaml
media_player: !include media_players.yaml
binary_sensor: !include binary_sensors.yaml
sensor: !include sensors.yaml
device_tracker: !include device_trackers.yaml
switch: !include switches.yaml
notify: !include notifiers.yaml
script: !include scripts.yaml
light: !include lights.yaml
